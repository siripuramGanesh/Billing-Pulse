# BillingPulse - Copy to .env and fill in

# Database (default works with docker-compose)
DATABASE_URL=postgresql://billingpulse:billingpulse_dev@localhost:5432/billingpulse

# Auth - CHANGE IN PRODUCTION
SECRET_KEY=change-me-in-production-use-openssl-rand-hex-32

# Voice AI (Phase 2 - required for outbound calls)
# VAPI_API_KEY=your-vapi-api-key
# VAPI_ASSISTANT_ID=your-assistant-id-from-vapi-dashboard
# VAPI_PHONE_NUMBER_ID=your-phone-number-id-from-vapi
# Optional: Twilio (if using Twilio-imported number in Vapi)
# TWILIO_ACCOUNT_SID=
# TWILIO_AUTH_TOKEN=
# TWILIO_PHONE_NUMBER=

# LLM (Phase 3 - outcome extraction)
# OPENAI_API_KEY=your-openai-key
# OPENAI_MODEL=gpt-4o-mini

# Redis (Phase 4+)
REDIS_URL=redis://localhost:6379/0

# Email (claimer notifications after each call)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASSWORD=
# SMTP_USE_TLS=true
# MAIL_FROM_EMAIL=noreply@yourdomain.com
# MAIL_FROM_NAME=BillingPulse
# Use MCP email server (spawned subprocess) instead of direct SMTP
# USE_MCP_EMAIL=false

# Phase 7
# APP_ENV=development
# ENCRYPT_SENSITIVE_FIELDS=false
# ENCRYPTION_KEY=   # 32-byte base64 Fernet key; generate: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
# SENTRY_DSN=       # optional error tracking
